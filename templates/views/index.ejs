<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="public/style.css">
    <link rel="icon" href="/partials/hazmat.png" type="image/x-icon">
    <title>Covid19-Cases-Web_APP</title>
</head>

<body>
    <!-- <iframe src="https://public.domo.com/cards/bWxVg" width="500px" height="500px" marginheight="0" marginwidth="0" frameborder="0"></iframe> -->

    <main class="d-flex align-items-center justify-content-center">
        <div class="card text-white innerdiv mb-3" style="width: 460px; height: 300px;">
            <div class="d-flex justify-content-center mt-3">
                <img src="/partials/icon1.png" class="card-img-top imgicon" alt="...">
            </div>
            <div class="card-body">
                <form action="/" method="POST">
                    <select name="country" class="Selectfield rounded-pill form-select fw-bold mt-3">
                    <option selected>Select your Contury</option>
                    <% for(let i=0; i<country1.length; i++) {%>
                        <option value= "<%- country1[i].name %>">
                            <%= country1[i].name %>
                        </option>
                        <% } %>
                  </select>
                    <div class="text-center m-2">

                        <button class="btn btn-outline-dark px-4 fw-bold rounded-pill">Submit</button>
                    </div>
                </form>
            </div>
    </main>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

